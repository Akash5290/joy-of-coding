#include <stdio.h>
#include <stdlib.h>

int main()
{
    printf("the size of int:%d\n",sizeof(int));
    printf("the size of unsigned int:%d\n",sizeof( unsigned int));
    printf("the size of unsigned short int:%d\n",sizeof(unsigned short int));
    printf("the size of unsigned long int:%d\n",sizeof(unsigned long int));
    printf("the size of unsigned long long int:%d\n",sizeof(unsigned long long int));
    printf("the size of signed char :%d\n",sizeof(signed char));
    printf("the size of unsigned char:%d\n",sizeof(unsigned char));
    printf("the size of long double:%d\n",sizeof(long double));
    printf("the size of short int:%d\n",sizeof(short int));
    printf("the size of double:%d\n",sizeof(double));
    printf("the size of long int:%d\n",sizeof(long int));
    printf("the size of float:%d\n",sizeof(float));
    printf("the size of char:%d\n",sizeof(char));
    printf("the size of long long int:%d\n",sizeof(long long int));
    return 0;
}
