#include <stdio.h>
#include<stdlib.h>
int main()
{
int n=10, c[10]={2 ,6, 10, 14, 18, 3, 7, 11, 15, 19},i,pos,x;
printf("initial array:");
for(i=0;i<10;i++)
{
    printf(" %d ",c[i]);
}
pos=6;
n--;
printf("\nnew updated array:");
for(i=0;i<10;i++)
{
    if (c[i]==3)
    {
        continue;
    }
    printf("   %d",c[i]);
}


    return 0;
}
