#include <stdio.h>
#include <stdlib.h>
#include<math.h>

int main()
{
int n,rem,res,res1,count,t,m;
printf("enter the number\n");
scanf("%d",&n);
count=log10(n)+1;
while(n!=0)
{
   rem=n%10;
  printf("%d\n",rem);
   res=n-rem;
   res1=res/10;
   n=res1;
}
 printf("\ntotal number of digits:%d",count);

return;
   }
